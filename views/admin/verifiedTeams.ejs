<div class="row align-items-center justify-content-center">
  <div class="col-12 mt-5">
    <div class="home-slide-text">
      <h5>Verified teams</h5>
    </div>
    <table id="verified-hacker-table" class="display" style="width: 100%">
      <thead>
        <tr>
          <th>Sr. No.</th>
          <th>Team name</th>
          <th>Team ID</th>
          <th>Domain</th>
          <th>Institute</th>
          <th>No. of members</th>
          <th>UTR</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% let serialNumber = 1; %> <% verifiedTeams.forEach(function(item) {%>
        <tr>
          <td><%= serialNumber %></td>
          <td><%= item.teamName %></td>
          <td><%= item.teamId %></td>
          <td><%= item.domains %></td>
          <td><%= item.instituteName %></td>
          <td><%= item.numberOfMember %></td>
          <td><%= item.upiNumber %></td>
          <td>
            <% if (item.status === "pending") { %>
            <span
              class="badge rounded-pill text-bg-danger"
              data-bs-toggle="modal"
              data-bs-target="#exampleModal"
              style="cursor: pointer"
              data-user-id="<%= item._id %>"
              >Pending</span
            >
            <% } else { %>
            <span class="badge rounded-pill text-bg-success">Verified</span>
            <% } %>
          </td>
          <td>
            <a href="/profile/<%= item._id %>" class="btn btn-primary btn-sm"
              >View</a
            >
          </td>
        </tr>
        <% serialNumber++; %> <% }); %>
      </tbody>
    </table>
  </div>
</div>

<script>
  $(document).ready(function () {
    $("#verified-hacker-table").DataTable({
      dom: "Bfrtip",
      buttons: [
        {
          extend: "csv",
          text: "Export data",
          className: "custom-primary-btn",
        },
      ],
    });
  });
</script>
